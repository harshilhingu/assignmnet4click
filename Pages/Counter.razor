@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount" disabled="@(currentCount>19)">Click me</button>

<button class="btn btn-primary" @onclick="ResetCount">Reset</button>

<button class="btn btn-primary" @onclick="DecrementCount" disabled="@(currentCount<1)">Click here</button>


@code {
    private int currentCount = 1;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }

    private void DecrementCount()
    {
        currentCount--;
    }
    public class Name
    {
        public string harshil { get; set; }
    }
}


    

   